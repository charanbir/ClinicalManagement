<p id="notice"><%= notice %></p>

<h1>Listing Studies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Unique ID</th>
      <th>Title</th>
      <th>Principal Investigator</th>
      <th>Open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
    <% if study.open_closed? || current_user.name=='admin' %>
      <tr>
      	<td><%= study.id %></td>
        <td><%= study.title %></td>
        <td><%= study.name %></td>
        <td><%= study.open_closed %></td>
        <% if current_user.name=='admin' %>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h4><u><%= link_to 'Enroll in a Study', new_user_study_path %><u></h4>