<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>

<h1>Listing Sites</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>